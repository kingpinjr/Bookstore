@page
@model BookstoreWeb.Pages.Account.ProfileModel
@{
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthenticated" : "_Layout";
}
<style>
    
</style>
<body class="bg-img">
    <div class="container p-2 my-5 border bg-light w-75">
        <div class="row m-2">
            <div class="col-12 text-center">
                <label class="fs-1">Profile</label>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <img class="w-25" src="https://static-00.iconduck.com/assets.00/profile-circle-icon-2048x2048-cqe5466q.png" alt="Profile Icon" />
            </div>
        </div>
        <div class="row m-2">
            <div class="col-2">
                <label>First Name:</label>
            </div>
            <div class="col-10">
                <label>@Model.profile.FirstName</label>
            </div>
            <div class="col-2">
                <label>Last Name:</label>
            </div>
            <div class="col-10">
                <label>@Model.profile.LastName</label>
            </div>
            <div class="col-2">
                <label>Email:</label>
            </div>
            <div class="col-10">
                <label>@Model.profile.Email</label>
            </div>
        </div>
        <div class="row m-2">
            <div class="col-12 text-center">
                <a asp-page="ChangePassword" class="btn btn-danger">Change Password</a>
            </div>
        </div>
    </div>
</body>
